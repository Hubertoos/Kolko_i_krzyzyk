<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:weightSum="1"
    android:id="@+id/linearLayout">

    <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     >

     <Button
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:text="Button1"
         android:id="@+id/button1"
         android:onClick="onButton1Click"
         android:padding="0dp"
         android:layout_margin="10dp" />
     <Button
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:text="Button2"
         android:id="@+id/button2"
         android:onClick="onButton2Click"
         android:layout_margin="10dp" />
     <Button
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:text="Button3"
         android:id="@+id/button3"
         android:onClick="onButton3Click"
         android:layout_margin="10dp" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button4"
            android:id="@+id/button4"
            android:onClick="onButton4Click"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button5"
            android:id="@+id/button5"
            android:onClick="onButton5Click"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button6"
            android:id="@+id/button6"
            android:onClick="onButton6Click"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button7"
            android:id="@+id/button7"
            android:onClick="onButton7Click"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button8"
            android:id="@+id/button8"
            android:onClick="onButton8Click"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button9"
            android:id="@+id/button9"
            android:onClick="onButton9Click"
            android:layout_margin="10dp" />

    </LinearLayout>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Refresh"
        android:id="@+id/refreshGame"
        android:onClick="onRefreshButtonClick"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff8fffa4" />

</RelativeLayout>
